    @model User    

@{
    Layout = null;
}
 
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Css/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <title>Qeydiyyat</title>
</head>
<body>
    <section id="login" class="registr">
        <div class="daxil reqstr">
            <h1 class="text-center py-3">Qeydiyyatdan keç</h1>
            <form  asp-action="Registr"  asp-controller="User" method="post">
                <input type="text" asp-for="UserName" placeholder="Ad" autocomplete="off">
                <span asp-validation-for="UserName"class="text-danger"></span>
                <input type="text" placeholder="Soyad"  asp-for="UserSurname" autocomplete="off">
                <span asp-validation-for="UserSurname"class="text-danger"></span>
                <input type="text" placeholder="Login" asp-for="UserNickName" autocomplete="off">
                <span asp-validation-for="UserNickName"class="text-danger"></span>
                <input type="password" placeholder="Şifrə" asp-for="UserPassword" autocomplete="off">
                <span asp-validation-for="UserPassword"class="text-danger"></span>
@*                <input type="password" placeholder="Şifrəni təkrar daxil edin" asp-for="UserPassword" autocomplete="off">
                <span asp-validation-for="UserPassword" class="text-danger"></span>*@
                 <select class="form-control" asp-for="UserGenderId" asp-items="ViewBag.Genders">
                    <option value="">Cins</option>
                </select>
                <span asp-validation-for="UserGenderId" class="text-danger"></span>
                <button class="btn btn-primary qeyd p-1 px-4 fs-5 mt-2">Qeydiyyat</button>
            </form>
        </div>
    </section>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
