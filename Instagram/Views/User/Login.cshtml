
 @model User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Css/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <title>Login</title>
</head>
<body>
    <section id="login">
        <div class="daxil">
            <h1 class="text-center py-3">Daxil ol</h1>
            <form asp-action="Login"   asp-controller="User" method="post">
                <input  placeholder="Nickname" type="text" asp-for="UserNickName" autocomplete="off">
                <span asp-validation-for="UserNickName" class="text-danger"></span>
                <input type="password" placeholder="Password" asp-for="UserPassword" autocomplete="off">
                 <span asp-validation-for="UserPassword" class="text-danger"></span>
                <button class="btn log btn-primary p-1 px-4 fs-5">Login</button>
            </form>
            <p class="mt-2"><a href="/User/Registr" >Qeydiyyatdan kec</a></p> 
        </div>
    </section>
         <script src="custom.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
